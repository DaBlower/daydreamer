[sub_resource type="GDScript" id="GDScript_sugp2"]
resource_name = "distance"
script/source = "extends Label

func _ready() -> void:
	Global.connect(\"distance_changed\", Callable(self, \"_on_distance_changed\")) # call the _on_distance_changed func on self (the current script aka this one)
	
func _on_distance_changed(new_distance: float):
	var measurement = \"\"
	if int(new_distance) == 1:
		measurement = \" metre\"
	else:
		measurement = \" metres\"
	text = str(int(new_distance)) + measurement
"

